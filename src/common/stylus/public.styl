@import "variable.styl"
text {
  display: block;
}
//loading组件外层
.loading-wrap {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 100%
  background: rgba(0, 0, 0, 0.6);
}
//弹层外框
.layer-wrap {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 100%
  background: $color-dialog-background;
}
//弹框动画
.open-layer-an {
  animation: openLayerAn .5s ease .1s both;
}
.close-layer-an {
  animation: closeLayerAn .5s ease 0s both;
}
@-webkit-keyframes closeLayerAn {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
@-webkit-keyframes openLayerAn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
//水平垂直居中
.vertical-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
}
//水平居中
.item-center {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
}
//垂直居中
.item-vertical {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translate3d(0, -50%, 0);
}
//隐藏滚动条
::-webkit-scrollbar {
  display: none;
}
.header-tab {
  .van-tabs {
    height: 74px;
    &.van-tabs--line {
      padding-top: 0;
    }
    .van-tabs--line .van-tabs__wrap {
      height: 74px;
    }
    .van-tab {
      font-size: $font-size-medium-x;
      color: $color-theme;
      display: flex;
      justify-content: center;
      align-items: center;
      .van-ellipsis {
        white-space: normal;
        word-wrap: break-word;
        word-break: break-all;
        height: 74rpx;
        overflow hidden;
      }
    }
    .van-tab--active {
      font-size: $font-size-large-xx;
      font-weight: bold;
      color: $color-theme-b;
    }
    .van-tabs__line {
      height: 0;
    }
    .van-hairline--top-bottom:after {
      border-width: 0;
    }
  }
}
.nav-tab {
  .van-tab {
    font-size: $font-size-medium-x;
    color: $color-theme;
    font-weight: $font-weight-s;
  }
  .van-tab--active {
    color: $color-theme-b;
  }
  .van-tabs__scroll--line {
    padding: 0 50rpx;
  }
  .van-tabs__line {
    height: 4px;
    background-color: $color-background-button;
  }
  .van-hairline--top-bottom:after {
    border-width: 0;
    border-bottom: 1px solid $color-background;
  }
}
.index-wrap {
  .van-notice-bar {
    padding-left: 30px;
    height: 30px;
  }
}
